<div class="ui center aligned basic segment">
    <h3 class="ui center aligned dividing header">Login With: <div class="sub header">Disabled until the appropriate API key is generated/registered for provider</div></h3>
    {{#each providers}}
        <div class="huge ui {{name}} icon button" href="/auth/{{slug}}"><i class="{{name}} icon"></i>{{name}}</div>
    {{/each}}

    <div class="ui horizontal divider">Or</div>
    <h3 class="ui header">Login Here</h3>

    <form class="ui form" role="form" action="/auth/local/" method="post">
        <div class="field">
            <div class="ui input">
                <label for="inputUsernameEmail">Email</label>
                <input name="identifier" type="text" id="inputUsernameEmail">
            </div>
        </div>
        <div class="field">
            <div class="ui input">
                <label for="inputPassword">Password</label>
                <input name="password" type="password" id="inputPassword">
            </div>
        </div>

        <div class="ui divider"></div>
        
        <div class="field">
            <div class="ui buttons">
                <button type="submit" class="ui positive button">Login</button>
                <div class="or"></div>
                <button href="/register" class="ui button">Register</button>
            </div>
        </div>
    </form>
</div>